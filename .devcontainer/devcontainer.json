{
	"name": "cbojar.telegrambot",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"customizations": {
		"vscode": {
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true
			},
			"extensions": [
				"golang.Go",
				"shardulm94.trailing-spaces"
			]
		}
	},
	"remoteUser": "vscode"
}
